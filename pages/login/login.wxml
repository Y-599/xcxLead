<view>

<!-- 手机登录 -->

	<view class="page" data-weui-theme="{{theme}}">
		<view class="weui-form">
			<view class="weui-form__control-area">
				<view class="weui-cells__group weui-cells__group_form">
					<view class="weui-cells weui-cells_form">
			<view class="weui-cell"> 
				<view class="weui-cell__hd login_method_left" bindtap="toRexUser" >去注册</view>
			</view>
			
						<view class="weui-cell weui-cell_active">
			 
							<view class="weui-cell__hd"><label class="weui-label">手机号码</label></view>
							<view class="weui-cell__bd">
								<input class="weui-input" placeholder="填写你的手机号码" bindblur="write_account"  placeholder-class="weui-input__placeholder" />
							</view>
						</view>
						<view class="weui-cell weui-cell_active">
							<view class="weui-cell__hd">							
								<label class="weui-label">密码</label>
							</view>
							<view class="weui-cell__bd">
								<input class="weui-input"  bindinput="write_password" type="password" placeholder="填写本人的密码"    placeholder-class="weui-input__placeholder" />
							</view>
						</view>
						<view class="weui-cell weui-cell__hd">
								<view class="login_method_left" ></view>
								<view class="login_method_right" bindtap="forgetPasswrod">忘记密码？</view>
						</view>
					</view>
				</view>
			</view>
	
			<view class="weui-form__opr-area">
				<a class="weui-btn weui-btn_primary widhs" bindtap="phone_login">登录</a>
		  <view class="weui-dialog__bd fontt">如在登录过程中有任何问题，欢迎加Q：123456</view>
			</view>
		</view>
	</view>
</view>