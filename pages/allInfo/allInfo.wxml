<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<view class="weui-form__desc">为了保障你的合法权益，请完善你的信息</view>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">

					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">姓名</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindblur="check_username" placeholder="填写本人姓名" placeholder-class="weui-input__placeholder" />
						</view>
             <view class="weui-cell__ft">
                <a class="weui-btn_reset weui-btn_icon">
                    <i class="{{showUsername}}"></i>
                </a>
             </view>
					  </view>

          	<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">邮箱账号</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindblur="check_phone" placeholder="填写本人邮箱账号" placeholder-class="weui-input__placeholder" />
						</view>
             <view class="weui-cell__ft">
                            <a class="weui-btn_reset weui-btn_icon">
                            <i class="{{showPhone_account}}"></i>
                            </a>
                        </view>
					</view>

          		<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">银行卡</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindblur="check_bankCard" placeholder="填写本人银行卡号" placeholder-class="weui-input__placeholder" />
						</view>
             <view class="weui-cell__ft">
                            <a class="weui-btn_reset weui-btn_icon">
                            <i class="{{showBanks_card}}"></i>
                            </a>
                        </view>
					</view>
				
									<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">地址</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindblur="check_address" placeholder="填写本人现居" placeholder-class="weui-input__placeholder" />
						</view>
             <view class="weui-cell__ft">
                            <a class="weui-btn_reset weui-btn_icon">
                            <i class="{{showAddress}}"></i>
                            </a>
                        </view>
					</view>

				</view>
			</view>
	
		
		</view>

            

		
    <view class="weui-form__opr-area">

			<button bindtap="emailInput" class="weui-btn weui-btn_primary">确定</button> 

		</view>
	
	</view>
</view>

