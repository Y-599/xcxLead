<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">修改密码</h2>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
        
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">账号</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindblur="account_phone" placeholder="填写本人手机账号" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">旧密码</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindblur="old_password" placeholder="填写旧密码" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">新密码</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindblur="new_password" placeholder="填写旧密码" type="number" placeholder-class="weui-input__placeholder" />
						</view>
					</view>

          	<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">验证密码</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindblur="tNew_password" placeholder="验证新密码" type="number" placeholder-class="weui-input__placeholder" />
						</view>
					</view>


				</view>
			</view>
		</view>
	
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary " bindtap="chage_passwrod">确定</a>
		</view>


	</view>
</view>
