

<view class="table">
  <view class="tr bg-w">
    <view class="th">作品名称</view>
    <view class="th">每次收益</view>
    <view class="th ">收益时间</view>   


  </view>
  <block wx:for="{{listDatas}}" wx:key="index">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td productName">{{item.production}}</view>
      <view class="td productName">{{item.earnYear}}</view>
      <view class="td productName">{{item.datalineTime}}</view>
    

      
    
    </view>
    <view class="tr" wx:else>
      <view class="td productName">{{item.production}}</view>
      <view class="td productName">{{item.earnYear}}</view>
      <view class="td productName">{{item.datalineTime}}</view>
  

    </view>
  </block>
</view>